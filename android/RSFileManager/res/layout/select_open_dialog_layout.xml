<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.ruysing.filemanager"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_open_dialog_bg"
    >
   <ImageView android:id="@+id/exit_icon" 
   		android:src="@drawable/info"
   		android:layout_width="40dip"
   		android:layout_height="40dip"
   		android:scaleType="fitCenter"
   		android:layout_marginLeft="20dip"
   		android:layout_marginTop="8dip"
   	/>
   	<TextView android:id="@+id/exit_title"
   		android:text="系统确认"
		android:layout_width="200dip"
		android:layout_height="40dip"
		android:layout_toRightOf="@id/exit_icon"
		android:textColor="#FF000000"
		android:textSize="20sp"
		android:gravity="center_vertical"
		android:layout_marginLeft="8dip"
		android:layout_marginTop="5dip"
   	/>
   	<TextView android:id="@+id/exit_message"
   		android:textSize="15sp"
   		android:textColor="#FF000000"
   		android:layout_width="wrap_content"
   		android:layout_height="45dip"
   		android:layout_below="@+id/exit_icon"
   		android:layout_centerInParent="true"
   		android:text="你確定要退出RS文件管理系统吗?"
   		android:gravity="center"
   	/>
   	<Button android:id="@+id/exit_btn_ok"
   		android:layout_width="110dip"
   		android:layout_height="35dip"
   		android:layout_marginLeft="18dip"
   		android:text="确 定"
   		android:layout_below="@id/exit_message"
   	/>
   	<Button android:id="@+id/exit_btn_cancel"
   		android:layout_width="110dip"
   		android:layout_height="35dip"
   		android:text="取 消"
   		android:layout_below="@id/exit_message"
   		android:layout_toRightOf="@id/exit_btn_ok"
   	/>   
   	<View android:layout_marginTop="10dip"
   		android:layout_below="@id/exit_btn_ok"
   		android:layout_width="100dip"
   		android:layout_height="1dip"
   	/>
</RelativeLayout>
