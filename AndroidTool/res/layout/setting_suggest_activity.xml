<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/lineLayout1"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@color/white">
	
	<!-- 标题栏 -->
	<TextView android:id="@+id/suggest_title_text"
  		android:layout_width="fill_parent"
	  	android:layout_height="wrap_content"
	  	android:textSize="18sp"
	  	android:textColor="@color/white"
	  	android:gravity="center"
	  	android:text="反馈建议"
	  	android:background="@drawable/title_bar_bg"/>
	<!-- 输入框 -->
	<EditText android:id="@+id/input"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20px"
		android:hint="在此输入反馈建议,不少于10个字符"
		android:textSize="14sp"
		android:layout_gravity="center_horizontal"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:width="400sp"
		android:height="200sp"
	 	android:layout_marginTop="20px"
	 	android:gravity="top"/>
	 <!-- 提交按钮 -->
	<Button	android:id="@+id/bt1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="@drawable/setting_suggest_sumbit"
		android:layout_gravity="center_horizontal"/>
	<!-- 问题列表 -->	
	<ListView android:id="@+id/list_qa" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent" 
		android:listSelector="@drawable/lifenumber_list_selected"
		android:scrollbars="none"
		android:cacheColorHint="#00000000"/>
</LinearLayout>